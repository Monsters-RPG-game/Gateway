<!DOCTYPE html>
<html lang="en">
<head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Monsters - Login</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap");

        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: "Inter", "sans-serif";
        }

        body {
            overflow-x: hidden;
        }

        .container {
            background: #f3f4f6;

            height: fit-content;
            min-height: 100vh;
            width: 100vw;
            display: flex;
            align-items: center;
        }

        .container.dark {
            background: #010b00;
        }

        .container .left {
            padding-bottom: 30px;
            height: fit-content;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            align-items: center;
            padding-bottom: 100px;
            flex: 1;
        }

        .container .left h2 {

            color: #374151;

            font-size: 5.8rem;
            font-weight: 700;
            margin-bottom: 40px;
        }

        .container.dark .left h2 {

            color: #94a3b8;
        }

        .container .left h2 span {
            color: #e11d48;

            font-weight: 700;
        }

        .container.dark .left h2 span {
            color: #7c3aed;
            font-weight: 700;
        }


        .container .left .left-header__bottom {
            display: flex;
            align-items: center;
            flex-direction: column;
        }

        .container .left .left-header__bottom span:first-child {
            font-weight: 600;
            color: #64748b;
            font-size: 1.875rem; /* 30px */
            line-height: 2.25rem; /* 36px */
        }

        .container.dark .left .left-header__bottom span:first-child {

            color: #e2e8f0;
        }

        .container .left .left-header__bottom span:last-child {

            color: #94a3b8;
            margin-top: 8px;
            font-size: 0.875rem; /* 14px */
            line-height: 1.25rem; /* 20px */
        }

        .container.dark .left .left-header__bottom span:last-child {
            color: #64748b;

        }


        .container .left span {
            color: gray;
        }

        .container .left form {
            height: 100%;
            display: flex;
            flex-direction: column;
            gap: 20px;
            flex-direction: column;

        }

        .container .left form label {
            display: flex;
            flex-direction: column;
            color: #334155;
            margin-top: 14px;
            width: 300px;
            color: #64748b;
            font-size: 0.875rem; /* 14px */
            line-height: 1.25rem; /* 20px */
        }

        .container.dark .left form label {
            display: flex;
            flex-direction: column;
            color: white;
            width: 300px;

            font-size: 0.875rem; /* 14px */
            line-height: 1.25rem; /* 20px */
        }

        .container .left form input {
            margin-top: 8px;
            margin-bottom: 8px;
            height: 3em;
            border: 1px solid #94a3b8;
            border-radius: 4px;
            background: #e5e7eb;
            border: none;
            padding: 0px 5px;
            font-weight: 600;
            color: #475569;
        }

        .container.dark .left form input {
            margin-top: 8px;
            margin-bottom: 8px;
            height: 3em;
            border-radius: 4px;
            background: #1f1f22;
            color: #cbd5e1;
            border: none;
            padding: 0px 3px;

            font-weight: 600;

        }


        .container .left form input::placeholder {
            color: #9ca3af;
            padding: 0px 4px;
            font-weight: 500;
        }

        .container .left form .link-container {
            display: flex;
            justify-content: center;
            margin-top: 40px;
        }

        .container .left form .link-container span {
            font-size: 0.875rem; /* 14px */
            line-height: 1.25rem; /* 20px */
            color: #475569;
        }

        .container.dark .left form .link-container span {
            font-size: 0.875rem; /* 14px */
            line-height: 1.25rem; /* 20px */

            color: #94a3b8;
        }

        .container .left form .link-container span a {
            text-decoration: none;

            color: #a855f7;
        }

        .container.dark .left form .link-container span a {
            text-decoration: none;
            color: #ddd6fe;
        }

        .container .left form button {
            background: #7c3aed;
            color: white;
            font-weight: 600;
            padding: 4px 0px;
            border-radius: 5px;
            padding: 6px 0px;
            border: 1px solid grey;
            cursor: pointer;
        }

        .container.dark .left form button {
            background: #8b5cf6;
            color: white;
            font-weight: 600;
            padding: 4px 0px;
            border-radius: 5px;

            padding: 6px 0px;
            cursor: pointer;
        }

        .error-container {
            display: flex;
            display: none;
            justify-content: center;
            color: rgb(114, 33, 33);
            font-weight: 500;
            font-size: 0.875rem; /* 14px */
            line-height: 1.25rem; /* 20px */
        }

        .container .right {
            flex: 1;
        }

        .container .right img {
            height: 90%;
            width: 90%;
            object-fit: contain;
        }


        .theme-switch_container {
            padding-top: 10px;

            width: 80%;
            display: flex;
            justify-content: flex-end;
        }

        .theme-switch {


            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .theme-switch input {
            display: none;
        }

        .theme-switch label {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            border-radius: 34px;
            transition: background-color 0.4s;
        }

        .theme-switch label::before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            border-radius: 50%;
            transition: transform 0.4s;
        }

        .theme-switch input:checked + label {
            background-color: #7c3aed; /* Kolor tła włączonego switcha */
        }

        .theme-switch input:checked + label::before {
            transform: translateX(26px);
        }


        @media (min-width: 1600px) and (max-width: 1670px) {
            .container .right {
                flex: 1;
                height: 90%;
                width: 100%;

            }
        }

        @media (min-width: 1500px) and (max-width: 1590px) {
            .container .right {
                flex: 1;
                height: 80%;
                width: 100%;

            }
        }

        @media (min-width: 1400px) and (max-width: 1500px) {
            .container .right {
                flex: 1;
                height: 72%;
                width: 100%;

            }
        }

        @media (min-width: 1300px) and (max-width: 1400px) {
            .container .right {
                flex: 1;
                height: 65%;
                width: 100%;

            }
        }

        @media (min-width: 1280px) and (max-width: 1300px) {
            .container .right {
                flex: 1;
                height: 65%;
                width: 100%;

            }
        }


        @media (min-width: 0px) and (max-width: 1280px) {
            .container .right {
                display: none;
            }
        }

        @media (min-width: 0px) and (max-width: 400px) {
            .container .left h2 {
                text-align: center;
                font-size: 3.4rem;
                font-weight: 700;
                margin-bottom: 40px;
            }

            .container .left .left-header__bottom span:first-child {
                font-weight: 600;
                color: #e2e8f0;
                font-size: 1.375rem; /* 30px */
                line-height: 2.25rem; /* 36px */
            }

            .container .left .left-header__bottom span:last-child {
                color: #94a3b8;
                margin-top: 8px;
                font-size: 0.775rem; /* 14px */
                line-height: 1.25rem; /* 20px */
            }

            .container .left form label {

                display: flex;
                flex-direction: column;
                width: 250px;
                color: #64748b;
                font-size: 0.875rem; /* 14px */
                line-height: 1.25rem; /* 20px */
            }
        }

        @media (min-width: 400px) and (max-width: 500px) {
            .container .left h2 {
                text-align: center;
                font-size: 3.3rem;
                font-weight: 700;
                margin-bottom: 40px;
            }

            .container .left .left-header__bottom span:first-child {
                font-weight: 600;
                color: #e2e8f0;
                font-size: 1.375rem; /* 30px */
                line-height: 2.25rem; /* 36px */
            }

            .container .left .left-header__bottom span:last-child {
                color: #94a3b8;
                margin-top: 8px;
                font-size: 0.775rem; /* 14px */
                line-height: 1.25rem; /* 20px */
            }
        }
    </style>
</head>
<body>
<div class="container">
    <div class="left">
        <div class="theme-switch_container">
            <div class="theme-switch">
                <input type="checkbox" id="theme-toggle">
                <label for="theme-toggle"></label>
            </div>
        </div>

        <div class="left-header">
            <h2><span>M</span>onsters</h2>
            <div class="left-header__bottom">
                <span> Log in to your account</span>
                <span> Welcome back! Please enter your details.</span>
            </div>
        </div>
        <form action="<%= url; %>" method="post">
            <label for="login">Login</label>
            <% if (typeof userName !== 'undefined') { %>
                <input id="login" name="login" placeholder="Name" type="text" value='<%= userName; %>'>
            <% } else { %>
                <input id="login" name="login" placeholder="Name" type="text">
            <% } %>

            <label for="password">Password</label>
            <input id="password" name="password" placeholder="Password" type="password">

            <% if (typeof error !== 'undefined') { %>
                <div class="error-container"><%= error; %></div>
            <% } %>

            <div class="link-container">
                <span>Dont have an account? <a href="https://kiszczyc.pl/">Sign up</a></span>
            </div>
            <button type="submit">Log in</button>
        </form>
    </div>

    <span class="theme"></span>
</div>
<script>

  function toggleTheme() {
    const container = document.querySelector('.container');
    if (themeToggle.checked) {
      localStorage.setItem('theme', 'light');
      container.classList.add('dark');
    } else {
      localStorage.setItem('theme', 'dark');
      container.classList.remove('dark');
    }
  }

  const themeToggle = document.getElementById('theme-toggle');
  const theme = localStorage.getItem('theme');
  const error = true;
  const themeContainer = document.querySelector('.theme');
  const container = document.querySelector('.container');

  const savedTheme = localStorage.getItem('theme');
  if (savedTheme === 'light') {
    themeToggle.checked = true;
    toggleTheme();
  }

  themeToggle.addEventListener('change', toggleTheme);

  <% if (typeof error !== 'undefined') { %>
  const errorContainer = document.querySelector('.error-container');
  errorContainer.style.display = 'flex';
  <% } %>
</script>
</body>
</html>
